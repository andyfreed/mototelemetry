[
    {
        "id": "motorcycle-dashboard",
        "type": "tab",
        "label": "üèçÔ∏è Motorcycle Dashboard",
        "disabled": false,
        "info": "Real-time motorcycle telemetry dashboard reading from SQLite"
    },
    {
        "id": "inject-timer",
        "type": "inject",
        "z": "motorcycle-dashboard",
        "name": "Every 2 seconds",
        "props": [{"p": "payload"}],
        "repeat": "2",
        "crontab": "",
        "once": true,
        "onceDelay": 0.1,
        "topic": "",
        "payload": "",
        "payloadType": "date",
        "x": 140,
        "y": 100,
        "wires": [["get-latest-data"]]
    },
    {
        "id": "get-latest-data",
        "type": "sqlite",
        "z": "motorcycle-dashboard", 
        "mydb": "motorcycle-db",
        "sqlquery": "msg.topic",
        "sql": "SELECT ax, ay, az, latitude, longitude, speed_mph, timestamp FROM telemetry_data ORDER BY timestamp DESC LIMIT 1",
        "name": "Get Latest Telemetry",
        "x": 350,
        "y": 100,
        "wires": [["process-data"]]
    },
    {
        "id": "process-data",
        "type": "function",
        "z": "motorcycle-dashboard",
        "name": "Calculate G-Forces & Lean",
        "func": "if (msg.payload && msg.payload.length > 0) {\n    const data = msg.payload[0];\n    \n    // Calibration constants\n    const X_OFFSET = 6200;\n    const Y_OFFSET = 100;\n    const Z_OFFSET = 15400;\n    const SCALE = 16384;\n    \n    // Calculate G-forces\n    const forwardG = (data.ax - X_OFFSET) / SCALE;\n    const lateralG = (data.ay - Y_OFFSET) / SCALE;\n    const verticalG = (data.az - Z_OFFSET) / SCALE;\n    \n    // Calculate lean angle in degrees\n    const leanAngle = Math.asin(Math.max(-1, Math.min(1, lateralG))) * 57.3;\n    \n    // Create separate messages for each gauge\n    const messages = [\n        { topic: 'lean_angle', payload: leanAngle.toFixed(1) },\n        { topic: 'forward_g', payload: forwardG.toFixed(3) },\n        { topic: 'lateral_g', payload: lateralG.toFixed(3) },\n        { topic: 'speed', payload: data.speed_mph || 0 },\n        { topic: 'gps', payload: {\n            lat: data.latitude || 0,\n            lon: data.longitude || 0,\n            name: 'Motorcycle'\n        }}\n    ];\n    \n    return messages;\n}\nreturn null;",
        "outputs": 5,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 570,
        "y": 100,
        "wires": [
            ["lean-gauge"],
            ["forward-g-gauge"], 
            ["lateral-g-gauge"],
            ["speed-gauge"],
            ["gps-map"]
        ]
    },
    {
        "id": "lean-gauge",
        "type": "ui_gauge",
        "z": "motorcycle-dashboard",
        "name": "Lean Angle",
        "group": "gauges",
        "order": 1,
        "width": 4,
        "height": 4,
        "gtype": "gage",
        "title": "üèçÔ∏è Lean Angle",
        "label": "degrees",
        "format": "{{value}}¬∞",
        "min": -60,
        "max": 60,
        "colors": ["#00b500","#e6e600","#ca3838"],
        "seg1": 30,
        "seg2": 45,
        "x": 780,
        "y": 60,
